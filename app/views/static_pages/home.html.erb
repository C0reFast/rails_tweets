<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <% provide(:title,"Home") %>
  <div class="center hero-unit">
    <h1>Rails Tweets</h1>
    <p>The home page </p>
    
    <%= link_to "Sign up!", signup_path, class: "btn btn-primary" %>
  </div>
<% end %>
